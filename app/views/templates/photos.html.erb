<h1> List of photos </h1>

<form action="/insert_photo">
  <label for="add_photo">Image</label>
  <input id="add_photo" type="text" name="image_url" placeholder="Enter a URL for the image...">
  
  <label for="add_caption">Caption</label>
  <textarea id="add_caption" type="text" name="image_caption" placeholder="Enter a caption for the photo..."></textarea>
  
  <label for="add_id">Owner ID</label>
  <input id="add_id" type="text" name="owner_id" placeholder="Enter an ID of a User">

  <button> Add photo </button> 
</form>

<hr>

<table border="1">
  <tr>
    <th>
    Image
    </th>

    <th>
    Caption
    </th>

    <th> 
    Owner
    </th>

    <th>
    Posted
    </th>

    <th>
    </th>
  </tr>

  <% Photo.order({:created_at => :desc}).each do |photo| %>
  <tr>
    <td>
    <img src="<%= photo.image %>">
    </td>

    <td>
    <%= photo.caption %>
    </td>

    <td>
    <%=photo.poster.username%>
    </td>

    <td>
    <%= photo.created_at %>
    </td>
    
    <td>
    <a href="/photos/<%= photo.id %>">Show details</a>
    </td>
  </tr>

  <% end %>


</table>