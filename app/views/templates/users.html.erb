<h1> List of users </h1>

<form action="/insert_user">
  <label for="add_user">Username</label>
  <input id="add_user" type="text" name="user_input" placeholder="Enter a username...">
  <button> Add user </button> 
</form>

<hr>

<table border="1">
  <tr>
    <th>
    ID
    </th>

    <th>
    Username
    </th>

    <th> 
    </th>
  </tr>

  <% User.order(:username).each do |user| %>
  <tr>
    <td>
    <%= user.id %>
    </td>

    <td>
    <%= user.username %>
    </td>

    <td>
    <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>

  <% end %>


</table>